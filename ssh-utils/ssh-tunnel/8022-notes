./set-tunnel-ifc
sudo iptables -t nat -A PREROUTING -p tcp --dport 8022 -i eth0 -j DNAT --to 10.0.0.0:22
sudo iptables -t nat -A POSTROUTING -o tun0 -j MASQUERADE
sudo iptables -I FORWARD -p tcp -o tun0 --dport 22 -j ACCEPT
sudo iptables -I FORWARD -p tcp -i tun0 --sport 22 -j ACCEPT
sudo sh -c 'echo 1 >/proc/sys/net/ipv4/ip_forward'
